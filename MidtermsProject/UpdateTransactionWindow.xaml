<Window x:Class="MidtermsProject.UpdateTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Transaction" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFCBCACF" Margin="10">
        <StackPanel>
            <TextBlock Text="Update Transaction Status" 
                      FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Student:" FontWeight="Bold"/>
            <TextBlock x:Name="StudentTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Book:" FontWeight="Bold"/>
            <TextBlock x:Name="BookTextBlock" Margin="0,0,0,10"/>

            <Label Content="New Status:" Foreground="#020005"/>
            <ComboBox x:Name="StatusComboBox" DisplayMemberPath="TransactionStatus1" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Margin="0,0,10,0" 
                        Click="CancelButton_Click"/>
                <Button Content="Update" Width="80" Background="#640481" 
                        Foreground="#FFD7D5E4" Click="UpdateButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>