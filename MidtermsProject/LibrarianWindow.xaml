<Window x:Class="MidtermsProject.LibrarianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidtermsProject"
        mc:Ignorable="d"
        Title="Librarian Portal" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#FF0078D7" Height="60">
            <Label Content="NORTHVILLE UNIVERSITY" 
                   Foreground="White" 
                   FontSize="16" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            <Label Content="Librarian Portal" 
                   Foreground="White" 
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Welcome, Librarian!" 
                   Foreground="White" 
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <Button x:Name="ManageStudentsButton" 
                    Content="Manage Students" 
                    Width="200" 
                    Height="30" 
                    Margin="0,10"/>
            <Button Content="Manage Books" 
                    Width="200" 
                    Height="30" 
                    Margin="0,10"/>
            <Button Content="Process Borrow/Return" 
                    Width="200" 
                    Height="30" 
                    Margin="0,10"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Logout" 
                    Width="80" 
                    Click="LogoutButton_Click"
                    Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>