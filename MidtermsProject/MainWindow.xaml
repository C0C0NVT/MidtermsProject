<Window x:Class="MidtermsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidtermsProject"
        mc:Ignorable="d"
        Title="Northville University Library System - Login" 
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="#FF0078D7" Height="60">
            <Label Content="NORTHVILLE UNIVERSITY" 
                   Foreground="White" 
                   FontSize="16" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            <Label Content="Library System" 
                   Foreground="White" 
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <Label Content="Login" 
                   Foreground="White" 
                   FontSize="18" 
                   FontWeight="Bold" HorizontalContentAlignment="Center"
                   />

            <Label Content="Username" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Padding="5"/>

            <Label Content="Password" Foreground="White" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Padding="5"/>

            <Button x:Name="LoginButton" 
                    Content="LOGIN" 
                    Background="#FF0078D7" 
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35" 
                    Margin="0,20,0,0"
                    Click="LoginButton_Click"/>

            <TextBlock x:Name="ErrorTextBlock" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Label Content="© 2025 Northville University" Foreground="LightGray" FontSize="10"/>
        </StackPanel>
    </Grid>
</Window>