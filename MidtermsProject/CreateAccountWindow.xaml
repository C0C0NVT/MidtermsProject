<Window x:Class="MidtermsProject.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" Height="600" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFCBCACF">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Label Content="Create New Account" Foreground="#020005" FontSize="20" 
                   FontWeight="Bold" HorizontalContentAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Username" Foreground="#020005" Margin="0,5,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="35" Padding="5" FontSize="14"/>

            <Label Content="Password" Foreground="#020005" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Padding="5" FontSize="14"/>

            <Label Content="Confirm Password" Foreground="#020005" Margin="0,10,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Padding="5" FontSize="14"/>

            <Label Content="Full Name" Foreground="#020005" Margin="0,10,0,5"/>
            <TextBox x:Name="FullNameTextBox" Height="35" Padding="5" FontSize="14"/>

            <Button x:Name="CreateButton" Content="CREATE ACCOUNT" Background="#640481" 
                    Foreground="#FFD7D5E4" FontWeight="Bold" Height="40" 
                    Margin="0,20,0,0" Click="CreateButton_Click" FontSize="14"/>

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap"
                       Margin="0,15,0,0" FontSize="12" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>